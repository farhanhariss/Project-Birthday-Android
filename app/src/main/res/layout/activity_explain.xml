<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".poetry">

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="40dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Okay, tidak apa-apa. Aku sangat menghormati pilihanmu. Mungkin ada beberapa hal yang memutuskan kamu pilih jawaban ini. Tapi, tolong komunikasikan kenapanya ya. I need explanation."
                android:justificationMode="inter_word"
                android:fontFamily="@font/poppins_bold"
                android:layout_margin="20dp"/>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>